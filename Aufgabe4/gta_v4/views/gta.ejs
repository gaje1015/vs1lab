<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>GeoTagApp</title>
	<link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header>
	<img src="./images/location.png" width="100"
		 alt="an image of a map and location">
	<h1>GeoTagApp</h1>
	<nav>
		<a href="#">About</a> | <a href="#">Help</a> | <a
				href="/">Home</a>
	</nav>
</header>

<main>

	<section class="tagging">
		<h2>Tagging</h2>

		<!-- ############### Aufgabe1a Form1 Start -->

			<fieldset>
				<legend>
					<h3>Enter new GeoTag</h3>
				</legend>

				<label for="latitude">latitude</label>
				<input value="<%= latitude %>" type="text" id="latitude" name="latitude" pattern="[0-9]+\.[0-9]+" required>
				<label for="longitude">longitude</label>
				<input value="<%= longitude %>" type="text" id="longitude" name="longitude" pattern="[0-9]+\.[0-9]+" required>
				<label for="name">name</label>
				<input type="text" id="name" name="name" placeholder="some name" pattern="[\w ]+" maxlength="10"
					   required>
				<label for="hashtag">hashtag</label>
				<input type="text" id="hashtag" name="hashtag" placeholder="# + max. 10 letters"
					   pattern="#\w+" maxlength="11">
				<div class="button">
					<input type="submit" value="Submit" id="submitGT">
					<input type="submit" value="Update" id="update">
				</div>
			</fieldset>
		<!-- ############### Aufgabe1a Form1 Ende -->

	</section>

	<section class="discovery">
		<h2>Discovery</h2>

		<!-- ############### Aufgabe1a Form2 Start -->

			<fieldset>
				<legend>
					<h3>Filter by Search Term</h3>
				</legend>
				<input type="text" id="search" name="search" placeholder="search term">
				<input value="<%= latitude %>" type="hidden" id="filter-latitude" name="latitude" >
				<input value="<%= longitude %>" type="hidden" id="filter-longitude" name="longitude" >
				<input class="button"  type="submit" value="Apply" id="submitD">
				<input type="submit" id="delete" value="delete">
			</fieldset>

		<!-- ############### Aufgabe1a Form2 Ende -->
		<div class="mapresults">
			<div class="taglist">
				<ul id="results">
					<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
						<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
					<% }); %>
				</ul>
			</div>

			<div class="tagmap">
				<img id="result-img" src="./images/mapview.jpg" alt="a map with locations" data-tags="<%=JSON.stringify(taglist)%>" />
				<div class="caption">Result map</div>
			</div>
		</div>
	</section>

</main>

<footer>
	<span>2018/19 by LKIT</span>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>
</body>
</html>